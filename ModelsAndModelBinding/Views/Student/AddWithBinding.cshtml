@model Student
@{
    ViewData["Title"] = "AddWithBinding";
}

<h1>Add with ModelBinding</h1>
@if (ViewData["Message"] == null)
{
    <form method="post">
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input class="form-control" asp-for="FullName" />
            <span asp-validation-for="FullName"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth"></label>
            <input class="form-control" asp-for="DateOfBirth" />
            <span asp-validation-for="DateOfBirth"></span>
        </div>
        <div class="form-group">
            <label asp-for="EmailAddress"></label>
            <input class="form-control" asp-for="EmailAddress" />
            <span asp-validation-for="EmailAddress"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input class="form-control" asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>
        <input class="btn btn-primary" type="submit" value="Add Student" />
    </form>
}
else
{
    <h2>@ViewData["Message"]</h2>
}

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}